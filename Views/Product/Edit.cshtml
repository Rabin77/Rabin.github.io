@model Ghardailo.Models.Product_Details

<link href="~/css/create.css" rel="stylesheet" />
<h1 class="jumbotron text-center bg-primary text-white">Edit Product</h1>
<hr />
<body>
    <div class="row  justify-content-center">
        <div class="col-md-6 card">
            <div class="container">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ProductId" />
                    <div class="form-group">
                        <label asp-for="ProductName" class="control-label"></label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ProductPrice" class="control-label"></label>
                        <input asp-for="ProductPrice" class="form-control" />
                        <span asp-validation-for="ProductPrice" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Stock" class="control-label"></label>
                        <input asp-for="Stock" class="form-control" />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Manufacture" class="control-label"></label>
                        <input asp-for="Manufacture" class="form-control" />
                        <span asp-validation-for="Manufacture" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Expire" class="control-label"></label>
                        <input asp-for="Expire" class="form-control" />
                        <span asp-validation-for="Expire" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryName" class="control-label"></label>
                        <input asp-for="CategoryId" class="form-control" />
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a asp-action="Index" class="btn btn-danger">Cancel</a>
                    </div>
                </form>
            </div>
        </div>



    </div>

    <div>
    </div>
</body>
