@model Ghardailo.Models.Product_Details

<link href="~/css/create.css" rel="stylesheet" />
<div class="container">
    <div class="row justify-content-center text-center">
        <div class="col-md-8 card">
            
            <h4>Product Details:</h4>

            <div>
                <a asp-action="Edit" asp-route-id="@Model.ProductId">Edit</a> |
                <a asp-action="Index">Back to List</a>
            </div>

            <div class="row">
                <div class="col-md-8">
                    @if (Model.ImageName != null)
                    {
                        <img src="~/Images/@Model.ImageName" class="img-fluid img-thumbnail" width="400" height="200" />
                    }
                    else
                    {
                        <img src="~/Images/bike-default.png" class="img-fluid img-thumbnail" width="400" height="200" />
                    }
                </div>
                <div class="col-md-4">
                    <h6>Info:</h6>
                    <hr />
                    Product Id: @Model.ProductId <br />
                    Product Name: @Model.ProductName <br />
                    Product Category: @Model.CategoryName<br />
                    Product Price: @Model.ProductPrice  <br />
                    Total Stock: @Model.Stock<br />


                </div>
            </div>



        </div>

    </div>

</div>

