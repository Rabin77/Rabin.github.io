@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
<link href="~/css/login.css" rel="stylesheet" />
<body>
    <div class="row justify-content-md-center" id="loginpage">
        <div class="col-md-4">
            <section>
                <form id="account" method="post">
                    <h1>@ViewData["Title"]</h1>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary align-content-center">Log in</button>
                        <a class="ml-3" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>

                    </div>
                    <div class="form-group">
                        <div class="row">


                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="ml-3">Not Registerd Yet? </a>
                            </p>



                            @*<p>
                                    <button  type="submit" asp-page-handler="SendVerificationEmail" class="btn-link ml-3" style="padding:0px;margin:0px;border:0px">Resend email confirmation</button>
                                </p>*@


                        </div>



                    </div>
                </form>
            </section>
        </div>

    </div>
</body>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
